@using FCInformesSolucion.Constants
@using FCInformesSolucion.Models
@model FCInformesSolucion.Models.MenuViewModel
@{
    var applicationRoles = new SelectList(ApplicationContext.ApplicationRoles);
    var menus = new SelectList(ViewBag.Menus as List<MenuModel>, "Id", "Name");
}
<div class="page-title">
    <div class="title_left">
        <h3>@ViewBag.Title <small>Nuevo</small> </h3>
        <div class="title_actions">
            <button type="button" class="btn btn-success btn-xs" onclick="$('#maintenance-form').submit()">GRABAR</button>
            <button type="button" class="btn btn-link" onclick="window.location='@Url.Content("~/Menu")'">CANCELAR</button>
        </div>
    </div>
    <div class="title_right">
    </div>
</div>
<div class="clearfix"></div>
<div class="x_panel">
    <div class="x_content">
        <form role="form" class="form-horizontal" action='@Url.Action("New")' id="maintenance-form" method="post">
            <input id="Id" name="Id" type="hidden" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Url, new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Url, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Order, new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Order, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Order, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApplicationRole, new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.DropDownListFor(m => m.ApplicationRole, applicationRoles, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ApplicationRole, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ParentId, new { @class = "control-label col-md-3" })
                <div class="col-md-5">
                    @Html.DropDownListFor(m => m.ParentId, menus, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ParentId, "", new { @class = "text-danger" })
                </div>
            </div>            
        </form>
    </div>
</div>