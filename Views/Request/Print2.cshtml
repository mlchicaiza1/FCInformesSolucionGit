@model FCInformesSolucion.Models.RequestViewModel
@{
    Layout = "~/Views/Shared/_LayoutPrint.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <img src="~/Content/images/Logo_FCInformes.png" />
    </div>
    <div class="title_right">
    </div>
</div>
<div class="clearfix"></div>
<div class="x_panel">
    <div class="x_content">
        <div class="form-horizontal">  
            <div class="form-group">                
                <div class="col-md-9 col-sm-9 col-xs-9">
                    <table style="width: 100%">
                        <tr>
                            <td style="width: 100px"><b>Gestor Comercial</b></td>
                            <td style="width: 200px"><b>Cristian Noroña</b></td>
                        </tr>
                        <tr>
                            <td style="width: 100px"><b>Fecha Requerimiento</b></td>
                            <td style="width: 200px">2020/10/21</td>
                        </tr>
                        <tr>
                            <td style="width: 100px"><b>Fecha Entrega</b></td>
                            <td style="width: 200px">2020/10/21</td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="form-group" style="text-align: center">
                <b>PROSPECCIÓN DE CLIENTES</b>
            </div>
            <div class="form-group">
                <table style="width: 100%" border="1">
                    <tr>
                        <td style="width: 15px"><b>No.</b></td>
                        <td style="width: 200px"><b>Nombre</b></td>
                        <td style="width: 200px"><b>Cédula/Ruc</b></td>
                        <td style="width: 200px"><b>Estado Actual</b></td>
                        <td style="width: 200px"><b>Cupo Inicial Sugerido</b></td>
                    </tr>
                    <tr>
                        <td>
                            1
                        </td>
                        <td>
                            @Model.FullNames
                        </td>
                        <td>
                            @Model.Identification
                        </td>
                        <td>
                            @Model.ProcessStatus
                        </td>
                        <td>
                            @(Model.SuggestedInitialQuota?.ToString("C"))
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">@Model.ProcessRemarks</td>
                    </tr>
                </table>
            </div>                
        </div>
    </div>
</div>