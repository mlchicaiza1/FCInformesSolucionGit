@model FCInformesSolucion.Models.LoginModel
@{
    var menuUrl = ViewBag.MenuUrl;
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de sesión</title>    
    @Styles.Render("~/Content/css")    
    @Styles.Render("~/fonts/fonts")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body">
        <div class="row">
            <div class="col-md-4 col-md-offset-4" style="margin-top: 50px">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <section id="loginForm">
                            @using (Html.BeginForm("Login", "Account",
                                new { ReturnUrl = ViewBag.ReturnUrl },
                                FormMethod.Post,
                                new { @class = "form-horizontal panel-body", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4>Ingrese Usuario y Contraseña.</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div>
                                        @Html.LabelFor(m => m.UserName)
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div>
                                        @Html.LabelFor(m => m.Password)
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group text-center">
                                    <div>
                                        <input type="submit" value="Ingresar" class="btn btn-default" />
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/build/js/custom")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
